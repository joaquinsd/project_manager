<div class="container"><h1> Create a New Project </h1></div>
<div class="container">
    <form method="POST" action="/projects/create" >
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-group">
        <label for="name">Name</label>
        <input name="name" class="form-control" id="name" arial-describedby="nameHelp" placeholder="Enter Project Name">
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" type="text" class="form-control"></textarea>
      </div>

      <div class="form-group">
        <label for="start_date">Start Date</label>
        <input name="start_date" class="form-control" type="date">
      </div>

      <div class="form-group">
        <label for="end_date">End Date</label>
        <input name="end_date" class="form-control" type="date">
      </div>

      <div class="form-group">
        <label for="state">State</label>
        <select name="state" id="state">
          <option value="proposal">Proposal</option>
          <option value="in progress">In Progress</option>
          <option value="finished">Finished</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br>
    <p>Check all projects <%= link_to "here", projects_dashboard_path %>!</p>
</div>